    "test": "vitest"
  },
  "devDependencies": {
    "@types/node": "^17.0.23",
    "@typescript-eslint/eslint-plugin": "^5.30.5",
    "@typescript-eslint/parser": "^5.30.5",
    "eslint": "^8.12.0",
    "standard-version": "^9.3.2",
    "typescript": "^4.6.3",
    "unbuild": "^0.7.4",
    "vitest": "^0.17.0"
  }
